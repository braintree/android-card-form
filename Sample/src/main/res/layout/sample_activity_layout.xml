<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="com.braintreepayments.sample.SampleActivity">

    <Button
        android:id="@+id/material_light_theme_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/light_theme_form"
        android:textAllCaps="true"
        android:onClick="onClick" />

    <Button
        android:id="@+id/material_dark_theme_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dark_theme_form"
        android:textAllCaps="true"
        android:onClick="onClick" />

    <CheckBox
        android:id="@+id/vibrate_permission_enabled"
        android:text="Vibrate Permission Granted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"/>

</LinearLayout>