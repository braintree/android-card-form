<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="bt_field_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <style name="bt_base_textview">
        <item name="android:textSize">@dimen/bt_input_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="bt_text_input_layout"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:accessibilityLiveRegion" >polite</item>
    </style>

    <style name="bt_card_form_field" parent="bt_base_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/bt_margin</item>
        <item name="android:textCursorDrawable" tools:ignore="NewApi">@null</item>
    </style>

</resources>